<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    >

    <FrameLayout
        android:id="@+id/your_placeholder_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/block1_back"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:id="@+id/select_member"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24dp"
            android:text="Click to Select Members"
            android:textColor="@color/white"
            android:id="@+id/member_select_text"
            />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_view"
        android:layout_below="@id/select_member"
        android:layout_marginTop="12dp"
        android:layout_above="@+id/cont"
        android:background="@drawable/trans_white_rectangle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grammar_display_scroll"
            android:orientation="vertical"/>

    </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/submit_grammarian"
                android:id="@+id/cont"
                >

                <EditText
                    android:id="@+id/mistake_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/add"
                    android:background="@drawable/round_button"
                    android:hint="Enter the mistake and press + "
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textColorHint="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/round_button_tale"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_tale"
        android:text="Submit Report"
        android:layout_alignParentBottom="true"
        android:id="@+id/submit_grammarian"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>